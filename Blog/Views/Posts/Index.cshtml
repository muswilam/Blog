@using PagedList.Mvc

@using Blog.ViewModel

@model PostViewModel

@{
    ViewBag.Title = "Index";
    bool isAdmin = ViewBag.IsAdmin ?? false;
}


 @PostHelper.Render(Model, Html, isAdmin, false)


<div>
    @Html.PagedListPager(Model.Posts, page => Url.Action("Index", new { page, tagName = Request["tagName"] }))
</div>