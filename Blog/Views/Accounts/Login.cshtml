@model Blog.ViewModel.AdminViewModel

@{
    ViewBag.Title = "Login";
}

@section ExtraHeaders
    {
        <script src="~/Scripts/jquery-1.8.2.min.js"></script>
        <script src="@Url.Content("~/Scripts/Login.js")" type="text/javascript"></script>
        <script src="@Url.Content("~/Scripts/sha256.js")" type="text/javascript"></script>
    }

<div class="formHeader">
    LogIn
</div>

<div class="form">

    <form action="@Href("~/accounts/Login")" method="post" id="loginForm">

        <div class="inputCenterContainer">
            <label class="inputLabel">User_Name</label> <br />
            <input type="text" class="inputTextBox" name="userName" id="name"/>
            <label id="lbl" class="text-danger">@Model.AdminErrorMsg</label><br />
            @Html.ValidationMessageFor(x => x.UserName, "", new { id = "fieldValidate" , @class = "text-danger"})
           

            <label class="inputLabel">Password</label><br />
            <input type="password" class="inputTextBox" name="password" id="password" required/> <br />
            <label class="text-danger">@Model.PassErrorMsg</label><br />

            <input type="hidden" name="nonce" id="nonce" value="@Session["Nonce"]" />
            <input type="hidden" name="hash" id="hash" value="" />

            <input type="button" class="inputSubmit" onclick="getPasswordHash('password', '#nonce', '#hash'); $('#loginForm').submit();" value="Login" />
        </div>

    </form>

</div>
